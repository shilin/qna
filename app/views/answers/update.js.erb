$('.alerts').html('<%= j render 'shared/alerts' %>')

<% if @answer.errors.present? %>
    <% @answer.errors.full_messages.each do |message| %>
      $('.answer-errors').html('<%= j message %>')
    <% end %>
<% else %>
  $('.answer-errors').html('');
  $('.answers_list').html('<%= j render @question.answers.best_first %>');
<% end %>
